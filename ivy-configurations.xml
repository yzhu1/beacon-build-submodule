        visibility="public"
        description="required for testing"
        extends="compile"
        transitive="false" />
    <conf name='web-assets'
        visibility="public"
        description="required for deploying as an ear" />
    <conf name='coverage'
        visibility="public"
        description="required for cobertura" 
